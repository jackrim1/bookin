<header class="main-head">
        <div class="center" style="position:absolute; top:50%; height:0.5em; margin-top:-1.2em;"><%= link_to root_path do %>
           <%= image_tag("logo_no_slogo.png", height: 45) %>
          <% end %>
           </div>
        <div class="dropdown" style="float:right; top:50%; height:0.5em; margin-top:-1.4em;">
          <div class="dropbtn">
            <%= image_tag("dropdown.png", height: 45) %>
          </div>
              <div class="dropdown-content">

                <% if (!user_signed_in?) %>
                  <%= link_to "Login", new_user_session_path %>
                  <%= link_to "Sign Up", new_user_registration_path %>
                <% else %>
                  <%= link_to "Profile", edit_user_registration_path %>
                  <%= link_to "Log Out", destroy_user_session_path, method: :delete %>
                <% end %>

                <%= link_to "About", about_index_path %>
                <%= link_to "Contact", contact_index_path %>



              </div>
        </div>
      </header>